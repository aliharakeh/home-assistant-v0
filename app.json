{
  "expo": {
    "name": "home-assistant",
    "slug": "home-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/home.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "compileSdkVersion": 30,
      "targetSdkVersion": 30,
      "buildToolsVersion": "30.0.3",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.homeassistant"
    },
    "web": {
      "bundler": "metro", 
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/home.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
